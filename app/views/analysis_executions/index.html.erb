<%- model_class = AnalysisExecution -%>
<div class="page-header">
  <h1>Execuções</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Análise</th>
      <th>Duração</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @analysis_executions.each do |analysis_execution| %>
      <tr>
        <td><%= analysis_execution.analysis.name %></td>
        <td><%= analysis_execution.duration %> dias </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_analysis_execution_path(analysis_execution), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      analysis_execution_path(analysis_execution),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <%= link_to 'Registrar dados',
                      register_path(analysis_execution.id), :class => 'btn btn-mini' %>
          <%= link_to 'Visualizar dados registrados',
                      register_executions_path, :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_analysis_execution_path,
            :class => 'btn btn-primary' %>
