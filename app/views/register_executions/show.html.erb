<div class="page-header">
  <h1>Registro do dia #<%= @register_execution.day_number %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Analise:</strong></dt>
  <dd><%= @register_execution.analysis_execution.analysis.name %></dd>
  <dt>Allium cepa: </strong> </dt>
  <dd><%= Onion.find_by_id(@register_execution.onion_id).name %></dd>
  <dt>Tamanho da raiz: </strong> </dt>
  <dd><%= @register_execution.root_size %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              register_executions_path, :class => 'btn'  %>
  <%= link_to 'Registrar Outra',  register_path(@register_execution.analysis_execution.analysis.id), :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_register_execution_path(@register_execution), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              register_execution_path(@register_execution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
