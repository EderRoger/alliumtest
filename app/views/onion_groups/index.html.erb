<%- model_class = OnionGroup -%>
<div class="page-header">
  <h1>Grupos de análise</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Análise</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @onion_groups.each do |onion_group| %>
      <tr>
        <td><%= onion_group.name %></td>
        <td><%= onion_group.description %></td>
        <td><%= onion_group.analysis.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_onion_group_path(onion_group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      onion_group_path(onion_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_onion_group_path,
            :class => 'btn btn-primary' %>
